
{{#each dataset.data}}
    {{deleteRef}}
    <div class="card-deck mb-3 mt-5">
        <div class="card mb-4 box-shadow">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">{{this.label}}:{{@key}}</h4>
            </div>
            <div class="card-body">
                <form {{#if edit}} method="{{../formMethod}}" action="{{../formAction}}"{{/if}}>

                    <input hidden value="{{@key}}">
                    <div class="profile-form-constrainer">
                        {{#each this.entries}}
                            <div class="form-group row mb-0">
                                <label for="{{@key}}" class="col-sm-3 col-form-label">{{this.label}}:</label>
                                <div class="col-sm-8">
                                    <input name="{{@key}}" type="text" {{#if this.editable}}class="form-control" {{else}}class="form-control-plaintext" readonly {{/if}} id="{{@key}}" value="{{this.value}}">
                                </div>
                            </div>
                        {{/each}}
                    </div>
                    {{#if this.edit}}
                        <div class="d-flex justify-content-end"><button class="btn btn-success" type="submit">Save</button></div>
                    {{/if}}
                </form>

                {{#unless this.edit}}
                    <div class="d-flex justify-content-end"><a href="{{../deleteRef}}"><button class="btn btn-danger mr-1">Delete</button></a><a href="{{../editRef}}"><button class="btn btn-outline-success">Edit</button></a></div>
                {{/unless}}
            </div>

        </div>
    </div>
{{/each}}